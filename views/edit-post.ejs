  <%- include('includes/header') %>
  
  <div class="container py-md-5 container--narrow">
    
    <%- include('includes/flash') %>
    
    <form action="/post/<%= editPost._id %>/edit" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" value="<%= editPost.title %>">
      </div>

      <div class="form-group">
        <label for="post-content" class="text-muted mb-1"><small>Body Content</small></label>
        <textarea required name="content" id="post-content" class="body-content tall-textarea form-control" type="text"><%= editPost.content %></textarea>
      </div>
      
      <button class="btn btn-primary">Save Updates</button>
    </form>
  </div>
  
  <!-- footer begins -->
  <%- include('includes/footer') %>